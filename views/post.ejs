<%- include('header'); -%>
<!-- ======= Header ======= -->
<header id="header" class="fixed-top">
  <div class="container-fluid d-flex">

    <div class="logo mr-auto">
      <!-- <h1 class="text-light"><a href="/"><span>Tallo</span></a></h1> -->
      <!-- Uncomment below if you prefer to use an image logo -->
      <a href="/"><img src="/img/talloLogo.png" alt="" class="img-fluid"></a>
    </div>

    <nav class="nav-menu d-none d-lg-block">
      <ul>
        <li class="active"><a href="/">Home</a></li>
        <li class="drop-down"><a href="/profile">Profile</a>
          <ul>
            <li><a href="/buds">Buds</a></li>
            <li><a href="/feed">Community</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </li>
        <li><a href="/about">About Us</a></li>
        <li><a href="/contact">Contact Us</a></li>

        <li class="get-started"><a href="/search">Explore</a></li>
      </ul>
    </nav><!-- .nav-menu -->

  </div>
</header><!-- End Header -->

<main id="main">
  <section id="portfolio" class="portfolio">
    <div class="container">
      <div class="section-title" data-aos="fade-up">
        <h2>What do you think?</h2>
        <p>Comment on <%= posts[0].posterUserName %>'s photo</p>
      </div>
  <ul class='postUl'>
  <% for(var i=0; i<posts.length; i++) {%>
    <li>
      <img src="../<%= posts[i].imgPath%>">
      <p><%- posts[i].caption %></p>
    </li>

    <form class="" action="/comment/<%=posts[i]._id%>" method="post">
      <input class="commentInput" placeholder="Place Comment!" type="text" name="comment" >
      <button class="commentBtn" type="submit" name="button">Submit</button>
    </form>

  <% } %>
  </ul>
  
<% for (var i=0; i<comments.length;i++){%>
   <div class="commentContainer">
    <div class="speechBubble">
      <span class='postComment'><%=comments[i].comments%></span>
      <div class="bubbleArrow"></div>
    </div>
    <p class="commenter"><%= user.local.username %></p>
   <% if (user.local.email === posts[0].user) { %>
     <span><i name="<%=comments[i].comments%>" class="fa fa-trash trash" aria-hidden="true"></i></span>
   </div>
  <% } else { %>
  <% } %>

<%}%>
</main><!-- End #main -->
</div>
</section>
<script src="/viewsjs/post.js"></script>
<%- include('footer'); -%>
