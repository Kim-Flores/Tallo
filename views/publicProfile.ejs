  <% for(var i=0; i<posts.length; i++) {%>
    <li>
      <img src="../<%= posts[i].imgPath%>">
      <%- posts[i].caption %>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul> -->
  <section id="portfolio" class="portfolio">
    <div class="container">
  
      <div class="section-title" data-aos="fade-up">
        <p><%= posts[0].posterUserName %>'s Posts</p>
      </div>
      <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
        <% for(var i=0; i<posts.length; i++) {%>
        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
          <div class="portfolio-wrap">
              <div class="imgTiles">
                <a href="/post/<%= posts[i]._id%>">
                  <img src="../<%= posts[i].imgPath%>">
                </a>
                <span><%- posts[i].caption %></span>
              </div>
           
            <div class="portfolio-links">
              <a href="/post/<%= posts[i]._id%>" title="Comments"><i class="icofont-speech-comments"></i></a>
            </div>
            <div class="portfolio-info">
              <%- posts[i].caption %>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </section><!-- End Portfolio Section -->
</div>

<a href="#" class="back-to-top" style="display: inline;"><i class="icofont-simple-up"></i></a>
</main>
</section>
