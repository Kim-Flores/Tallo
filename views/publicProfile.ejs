<main id="main">
  <section id="portfolio" class="portfolio">
    <div class="container">
  <div class="section-title" data-aos="fade-up">
    <h2>Welcome</h2>
    <p>This is <%= posts[0].posterUserName %>'s Profile!</p>
  </div>
  <div class="publicUser">
  <img src="<%= posts[0].posterImg %>" alt=""> 
  <p id="friendId" data-id='<%= posts[0].posterId %>'><%= posts[0].posterUserName %></p>
  <button id="friendBtn">Add Friend</button>
  </div>
